@model UpdateTeamViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; 
}

<h1>Çalışan Güncelleme Sayfası</h1>
<br />
<form method="post" class="container">
    @Html.HiddenFor(x=>x.TeamID)
    <label>Ad</label>
    <input type="text" asp-for="FullName" class="form-control" />
    <br />
    <label>Unvan</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Görsel URL</label>
    <input type="text" asp-for="ImageURL" class="form-control" />
    <br />
    <label>Facebook</label>
    <input type="text" asp-for="Facebook" class="form-control" />
    <br />
    <label>Twitter</label>
    <input type="text" asp-for="Twitter" class="form-control" />
    <br />
    <label>Linkedin</label>
    <input type="text" asp-for="Linkedin" class="form-control" />
    <br />
    <button class="btn btn-outline-info">Güncelle</button>
</form>
