﻿@using RealHouzing.Consume.Models.CategoryViewModels;﻿﻿
@model AddCategoryViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<form method="post">
    <br />
    <label>Category Name</label>
    <input type="text" class="form-control" asp-for="CategoryName" />
    <br />
    <label>Category Image URL</label>
    <input type="text" asp-for="ImageURL" class="form-control" />
    <br />
    <button class="btn btn-info">Add Category</button>
</form>