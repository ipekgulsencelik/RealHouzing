﻿@using RealHouzing.Consume.Models.CategoryViewModels;﻿
@model UpdateCategoryViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <form method="post">
        <br />
        <br />
        <label>Category ID</label>
        <input type="text" class="form-control" asp-for="CategoryID" />
        <br />
        <label>Category Name</label>
        <input type="text" class="form-control" asp-for="CategoryName" />
        <br />
        <label>Category Image URL</label>
        <input type="text" asp-for="ImageURL" class="form-control" />
        <br />
        <button class="btn btn-success">Update Category</button>
    </form>
</div>