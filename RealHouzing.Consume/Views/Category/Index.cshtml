﻿
@model List<CategoryListViewModel>

@{
    Layout = null;
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<br />
<br />
<div class="container">
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Category Name</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.CategoryName</td>
                <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-success">Update</a></td>
                <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </table>
    <br />
    <a href="/Category/AddCategory/" class="btn btn-primary">Add New Category</a>
</div>