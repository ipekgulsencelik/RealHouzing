@model AddProductViewModel

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />


<div class="container">
    <br />
    <br />
    <form method="post">
        <label>Product Title</label>
        <input type="text" asp-for="ProductTitle" class="form-control" />
        <br />
        <label>Product Price</label>
        <input type="text" asp-for="ProductPrice" class="form-control" />
        <br />
        <label>Product Type</label>
        <input type="text" asp-for="ProductType" class="form-control" />
        <br />
        <label>Product Address</label>
        <input type="text" asp-for="ProductAddress" class="form-control" />
        <br />
        <label>Bedroom Count</label>
        <input type="text" asp-for="BedRoomCount" class="form-control" />
        <br />
        <label>Bath Count</label>
        <input type="text" asp-for="BathCount" class="form-control" />
        <br />
        <label>Square</label>
        <input type="text" asp-for="Square" class="form-control" />
        <br />
        <label>Cover Image URL</label>
        <input type="text" asp-for="CoverImageURL" class="form-control" />
        <br />
        <label>Category</label>
        @Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>)ViewBag.categories,new {@class="form-control"})
        <br />
        <button class="btn btn-info">Add Product</button>
    </form>
</div>