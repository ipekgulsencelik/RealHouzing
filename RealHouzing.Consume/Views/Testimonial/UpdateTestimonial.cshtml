﻿@using RealHouzing.Consume.Models.TestimonialViewModels;
@model UpdateTestimonialViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1 class="container">Referans Güncelleme Sayfası</h1>
<br />
<form method="post" class="container">
    @Html.HiddenFor(x=>x.TestimonialID)
    <label>Ad</label>
    <input type="text" asp-for="FullName" class="form-control" />
    <br />
    <label>Unvan</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Yorum</label>
    <textarea type="text" asp-for="Comment" class="form-control"></textarea>
    <br />
    <label>Görsel URL</label>
    <input type="text" asp-for="ImageURL" class="form-control" />
    <br />
    <button class="btn btn-outline-info">Güncelle</button>
</form>