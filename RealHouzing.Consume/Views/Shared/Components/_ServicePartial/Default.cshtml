﻿@using RealHouzing.Consume.Models.ServiceItemViewModels;
@model List<ServiceItemListViewModel>

<section class="w3l-index-about py-5" id="about2">
    <div class="container py-md-5 py-2">
        <div class="row">
            <div class="col-lg-6 pe-lg-5">
                <div class="w3l-abouthny-img">
                    <img src="@ViewBag.imageURL" alt="" class="img-fluid radius-image">
                </div>
            </div>
            <div class="col-lg-6 mt-lg-0 mt-5">
                <div class="w3l-abouthny-info">
                    <h6 class="title-subw3hny">Who we are</h6>
                    <h3 class="title-w3l">@ViewBag.title</h3>
                    <p class="mt-4">
                        @ViewBag.description
                    </p>
                    <p class="mt-3">
                        @ViewBag.subDescription
                    </p>
                    <ul class="w3l-right-book w3l-right-book-grid mt-md-5 mt-4">
                        @foreach (var item in Model)
                        {
                            <li><span class="fas fa-check"></span> @item.ServiceName</li>
                        }
                    </ul>
                    <a href="#services" class="btn btn-style btn-primary mt-4">Discover our services <i class="fas fa-angle-double-right ms-2"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>