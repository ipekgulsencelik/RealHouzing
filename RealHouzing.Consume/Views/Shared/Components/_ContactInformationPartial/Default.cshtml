﻿@using RealHouzing.Consume.Models.ContactViewModels;
@model List<ContactListViewModel>

<div class="contacts-5-grid-main mt-5">
    <div class="contacts-5-grid">
        <div class="map-content-5">
            <div class="d-grid grid-col-2 justify-content-center">
                <div class="contact-type">
                    @foreach (var item in Model)
                    {
                        <div class="address-grid">
                            <span class="fas fa-map-marked-alt"></span>
                            <h6>Address</h6>
                            <p>@item.Address</p>
                        </div>
                        <div class="address-grid">
                            <span class="fas fa-envelope-open-text"></span>
                            <h6>Email</h6>
                            <a href="mailto:mailone@example.com" class="link1">@item.Mail1</a>
                            <a href="mailto:mailtwo@example.com" class="link1">@item.Mail2</a>
                        </div>
                        <div class="address-grid">
                            <span class="fas fa-phone-alt"></span>
                            <h6>Phone</h6>
                            <a href="tel:+12 324-016-695" class="link1">@item.Phone1</a>
                            <a href="tel:+44 224-058-545" class="link1">@item.Phone2</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>