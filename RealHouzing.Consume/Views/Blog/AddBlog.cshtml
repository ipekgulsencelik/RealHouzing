﻿@using RealHouzing.Consume.Models.BlogViewModels;
@model AddBlogViewModel

@{
    ViewData["Title"] = "AddBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1 class="container">Blog Ekleme Sayfası</h1>
<br />
<form method="post" class="container">
    <label>Yazar</label>
    <input type="text" asp-for="Writer" class="form-control" />
    <br />
    <label>Başlık</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <label>Yazar Görsel URL</label>
    <input type="text" asp-for="WriterImageURL" class="form-control" />
    <br />
    <label>Blog Görsel URL</label>
    <input type="text" asp-for="BlogImageURL" class="form-control" />
    <br />
    <button class="btn btn-outline-info">Kaydet</button>
</form>